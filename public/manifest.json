{
  "name": "EventSync - Sistema de Gerenciamento de Eventos",
  "short_name": "EventSync",
  "description": "Plataforma completa para gerenciamento de eventos, inscrições e check-ins com QR Code",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  
  "icons": [
    {
      "src": "/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Criar Evento",
      "short_name": "Novo Evento",
      "description": "Criar um novo evento",
      "url": "/events/create",
      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Acessar dashboard principal",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Meus Eventos",
      "short_name": "Eventos",
      "description": "Ver meus eventos",
      "url": "/events",
      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "utilities"
  ],
  
  "screenshots": [
    {
      "src": "/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshot-narrow.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://eventsync.com/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  
  "protocol_handlers": [
    {
      "protocol": "web+eventsync",
      "url": "/events/%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/events/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/vnd.ms-excel": [".xls"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "permissions": [
    "notifications",
    "background-sync",
    "storage"
  ],
  
  "background": {
    "service_worker": "/sw.js",
    "type": "module"
  },
  
  "features": [
    "Cross Platform",
    "Offline Support",
    "Push Notifications",
    "QR Code Generation",
    "Event Management",
    "Registration System",
    "Payment Processing",
    "Analytics Dashboard",
    "CRM Integration",
    "Multi-language Support"
  ],
  
  "author": "EventSync Team",
  "version": "1.3.0",
  "homepage_url": "https://eventsync.com",
  "support_url": "https://eventsync.com/support",
  "feedback_url": "https://eventsync.com/feedback",
  "privacy_policy_url": "https://eventsync.com/privacy",
  "terms_of_service_url": "https://eventsync.com/terms"
}

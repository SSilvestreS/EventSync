# Configurações do Banco de Dados
DATABASE_URL="postgresql://username:password@localhost:5432/eventsync"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google Calendar API
GOOGLE_CALENDAR_CLIENT_ID="your-google-calendar-client-id"
GOOGLE_CALENDAR_CLIENT_SECRET="your-google-calendar-client-secret"
GOOGLE_CALENDAR_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# Stripe (Pagamentos)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Vercel
VERCEL_URL="https://your-project.vercel.app"

# JWT
JWT_SECRET="your-jwt-secret-key"

# Upload de Arquivos
UPLOAD_MAX_SIZE="10485760" # 10MB em bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Analytics e Monitoramento
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

# Cache e Performance
REDIS_URL="redis://localhost:6379"
CACHE_TTL="3600" # 1 hora em segundos

# Segurança
CORS_ORIGIN="http://localhost:3000,https://your-domain.com"
RATE_LIMIT_MAX="100" # requisições por minuto
RATE_LIMIT_WINDOW="60000" # janela de tempo em ms

# EventSync - Variáveis de Ambiente
# Versão 1.2 - Sistema Completo de Gerenciamento de Eventos

# =============================================================================
# CONFIGURAÇÕES BÁSICAS
# =============================================================================

# Ambiente da aplicação
NODE_ENV=development
PORT=3000

# URL da aplicação
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# =============================================================================
# BANCO DE DADOS
# =============================================================================

# PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/eventsync"

# =============================================================================
# AUTENTICAÇÃO
# =============================================================================

# NextAuth.js
NEXTAUTH_SECRET=your-nextauth-secret-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# PAGAMENTOS - STRIPE
# =============================================================================

# Stripe (Produção)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe (Teste)
STRIPE_TEST_SECRET_KEY=sk_test_...
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_...
STRIPE_TEST_WEBHOOK_SECRET=whsec_...

# =============================================================================
# EMAIL
# =============================================================================

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@eventsync.com

# =============================================================================
# GOOGLE APIS
# =============================================================================

# Google Calendar
GOOGLE_CALENDAR_ID=your-calendar-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# =============================================================================
# WHATSAPP BUSINESS
# =============================================================================

# WhatsApp Business API
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# =============================================================================
# ANALYTICS - VERSÃO 1.2
# =============================================================================

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Amplitude
NEXT_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-api-key

# =============================================================================
# CRM - VERSÃO 1.2
# =============================================================================

# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key

# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_BASE_URL=https://login.salesforce.com

# Pipedrive
PIPEDRIVE_API_KEY=your-pipedrive-api-key

# Zapier
ZAPIER_WEBHOOK_URL=your-zapier-webhook-url

# =============================================================================
# AFILIADOS - VERSÃO 1.2
# =============================================================================

# Configurações de afiliados
AFFILIATE_DEFAULT_COMMISSION=10.0
AFFILIATE_MIN_PAYOUT=50.0
AFFILIATE_PAYOUT_SCHEDULE=MONTHLY

# =============================================================================
# INTERNACIONALIZAÇÃO - VERSÃO 1.2
# =============================================================================

# Idioma padrão
DEFAULT_LANGUAGE=pt-BR
FALLBACK_LANGUAGE=en-US

# =============================================================================
# TRACKING DE CONVERSÕES - VERSÃO 1.2
# =============================================================================

# Configurações de tracking
TRACK_UTM_PARAMETERS=true
TRACK_REFERRERS=true
TRACK_LANDING_PAGES=true

# =============================================================================
# NOTIFICAÇÕES PUSH - VERSÃO 1.2
# =============================================================================

# VAPID Keys para notificações push
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# MONITORAMENTO E LOGS - VERSÃO 1.2
# =============================================================================

# Logs
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
ENABLE_CONSOLE_LOGGING=true

# Monitoramento
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ALERT_EMAIL=alerts@eventsync.com

# =============================================================================
# SEGURANÇA - VERSÃO 1.2
# =============================================================================

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://eventsync.com

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# PERFORMANCE - VERSÃO 1.2
# =============================================================================

# Cache
CACHE_TTL=300000
MAX_CACHE_SIZE=100

# Timeouts
REQUEST_TIMEOUT=30000
DATABASE_TIMEOUT=10000

# =============================================================================
# BACKUP - VERSÃO 1.2
# =============================================================================

# Backup automático
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
MAX_BACKUP_SIZE=1GB

# =============================================================================
# DESENVOLVIMENTO
# =============================================================================

# Debug
DEBUG=true
ENABLE_HOT_RELOAD=true

# Testes
ENABLE_TESTS=true
TEST_COVERAGE_THRESHOLD=80

# =============================================================================
# EXEMPLOS DE CONFIGURAÇÃO
# =============================================================================

# Para desenvolvimento local:
# NODE_ENV=development
# DATABASE_URL="postgresql://postgres:password@localhost:5432/eventsync_dev"
# NEXTAUTH_URL=http://localhost:3000

# Para produção:
# NODE_ENV=production
# DATABASE_URL="postgresql://username:password@host:5432/eventsync_prod"
# NEXTAUTH_URL=https://eventsync.com

# Para testes:
# NODE_ENV=test
# DATABASE_URL="postgresql://username:password@localhost:5432/eventsync_test"
# NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# NOTAS IMPORTANTES
# =============================================================================

# 1. Nunca commite este arquivo no repositório
# 2. Mantenha as chaves secretas seguras
# 3. Use variáveis diferentes para cada ambiente
# 4. Atualize as URLs conforme seu domínio
# 5. Configure as APIs externas conforme necessário
# 6. Teste todas as integrações antes de usar em produção
